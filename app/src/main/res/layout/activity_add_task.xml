<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#EAEAEA">

    <!-- Заголовок -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Новая задача"
        android:textSize="30sp"
        android:layout_marginBottom="16dp"
        android:textColor="#333333" />

    <View
        android:id="@+id/divider"
        android:layout_width="1000dp"
        android:layout_height="2dp"
        android:background="@color/lg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="8dp"
        />

    <!-- Поле для ввода названия -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Название"
        android:textSize="24sp"
        android:textColor="#333333"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/etTaskName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_edittext"
        android:padding="12dp"
        android:hint="Введите название"
        android:layout_marginBottom="16dp"
        android:textColor="#333333"
        android:textSize="16sp" />

    <!-- Поле для ввода времени выполнения -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Время выполнения"
        android:textSize="24sp"
        android:textColor="#333333"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/etTaskTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_edittext"
        android:padding="12dp"
        android:hint="Введите время выполнения"
        android:layout_marginBottom="16dp"
        android:textColor="#333333"
        android:textSize="16sp" />

    <!-- Поле для ввода периодичности -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Периодичность"
        android:textSize="24sp"
        android:textColor="#333333"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/etTaskPeriodicity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_edittext"
        android:padding="12dp"
        android:hint="Введите периодичность"
        android:layout_marginBottom="16dp"
        android:textColor="#333333"
        android:textSize="16sp" />

    <!-- Кнопка добавления -->
    <Button
        android:id="@+id/btnAddTask"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Добавить"
        android:textSize="18sp"
        android:backgroundTint="#66B3FF"
        android:textColor="#FFFFFF"
        android:padding="12dp"
        android:layout_marginTop="265dp" />
</LinearLayout>
